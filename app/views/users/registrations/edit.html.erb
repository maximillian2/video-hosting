<div class="container">
  <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 text-center">
    <h2> <%= t('users.registrations.edit.edit_account_header') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label t('users.sessions.new.email_label') %><br/>
          <%= f.email_field :email, name: 'email', class: 'form-control'  %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label t('users.sessions.new.password_label') %><br/>
          <%= f.password_field :password, name: 'password_hint', class: 'form-control', autocomplete: 'off', data: { toggle: 'tooltip'}, title: t('users.registrations.edit.maybe_blank_password') %>
        </div>

        <div class="field">
          <%= f.label t('users.registrations.edit.password_confirmation') %><br/>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
        </div>

        <div class="field">
          <%= f.label t('users.registrations.edit.current_password')%><br/>
          <%= f.password_field :current_password, name: 'current_password_hint', class: 'form-control', autocomplete: 'off', data: { toggle: 'tooltip'}, title: t('users.registrations.edit.current_password_info') %>
        </div>



        <br/>

        <div class="actions">
          <%= f.submit t('users.registrations.edit.update_account'), class: 'btn btn-warning' %>
        </div>
    <% end %>

    <h3><%= t('users.registrations.edit.delete_account') %></h3>

    <p><%= button_to t('users.registrations.edit.delete_your_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

    <%= link_to t('users.registrations.edit.back'), :back, class: 'btn btn-default'%>
  </div>
</div>

<script>
    $('input[type=password][name=password_hint]').tooltip({ /*or use any other selector, class, ID*/
        placement: "right",
        trigger: "focus"
    });

    $('input[type=password][name=current_password_hint]').tooltip({ /*or use any other selector, class, ID*/
        placement: "right",
        trigger: "focus"
    });
</script>