<div class="container">
  <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 text-center">
    <fieldset class="signup-border">
      <legend class="signup-border">Log in</legend>
      <!--<h2>Log in</h2>-->

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, placeholder: 'Email' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-success' %>
          </div>
      <% end %>

      <%= render "users/shared/links" %>
    </fieldset>
  </div>
</div>