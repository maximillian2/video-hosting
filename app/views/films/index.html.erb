<%= render partial: 'partials/menu_bar' %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render partial: 'partials/side_menu' %>
    </div>

    <div class="col-md-9">
      <div class="row">
        <% if @films.empty? %>
            <h1 align="center"> <%= t('.add_materials') %></h1>
        <% else %>
            <% @films.each_with_index do |film, index| %>
            <div class="col-md-4 col-sm-6 col-lg-3">
              <div class="text-center thumbnail">

                <img src="<%= film.image %>" alt="poster" class="round-pic"/>
                <%= link_to fa_icon('remove', class: 'fa-fw'), film, method: :delete, class: 'video-item-delete' %>

                <div class="poster-actions">
                  <div class="poster-actions-inner">
                    <%= link_to fa_icon('eye', class: 'fa-fw'), film.link, class: 'video-item-show' %>
                    <%= link_to fa_icon('edit', class: 'fa-fw'), '', class: 'video-item-edit', 'data-toggle' => 'modal', 'data-target' => '#showModal' + index.to_s %>
                  </div>
                </div>

              </div>

              <p class="text-center nice-height"> <%= film.title %> </p>
            </div>
            <%= render partial: 'partials/modal', locals: { edit_film: film, edit_index: index } %>
            <% end %>
        <% end %>

      </div>
    </div>

  </div>
</div>
