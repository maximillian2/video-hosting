<!-- Modal start -->
<div class="modal fade" id="showModal<%= edit_index %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel" align="center"> <%= edit_film.title %>
          / <%= edit_film.original_title %> </h4>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-md-2">
              <img src="<%= edit_film.image %>"/>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-md-10">
                  <p class="modal-text"> <%= t('modal.category') + edit_film.category %> </p>

                  <p class="modal-text"> <%= t('modal.genres') +  edit_film.genres %> </p>

                  <p class="modal-text"> <%= t('modal.country') + edit_film.country %> </p>

                  <p class="modal-text"> <%= t('modal.year') + edit_film.year.to_s %> </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success"> <%= t('modal.save_changes')%> </button>
        <!-- FIXME link here -->
        <%= link_to t('modal.delete_record'), edit_film, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
<!-- Modal end -->
